.AppModal
  position fixed
  display none
  top 0
  right 0
  bottom 0
  left 0
  // border-radius modal-border-radius
  width 100%
  height 100%
  background-color modal-bg-color
  z-index z-modal
  box-shadow 0 10px 20px 3px alpha(black, 0.15)
  color modal-text-color

  &.js-active
    display block
    z-index z-active-modal


.AppModal__button--close
  position absolute
  top 0
  right 0
  display block
  width button-size-terms-close *0.6
  height button-size-terms-close *0.6
  margin-top button-size-terms-close * -0.25
  margin-right button-size-terms-close * -0.25
  background-color button-close-modal-bg-color
  border-radius button-radius-terms-close
  border 0
  padding 0
  // border 5px solid #1D90D7
  box-shadow 0 0 0 2px button-close-modal-border-color
  z-index z-modal-close-button

  svg
    display block
    width button-size-terms-close * 0.3
    height auto
    margin 0 auto
    fill button-close-modal-icon-color - 40% !important
    *
      fill button-close-modal-icon-color - 40% !important

.AppModal__body
  overflow-y scroll
  padding modal-border-radius*.5 0

.AppModalOverlay
  position relative
  display none
  width 100%
  height 100%
  z-index z-modal

.AppModal.js-active + .AppModalOverlay
[class^="AppModal--"].js-active + .AppModalOverlay
  display block
  background-color modal-overlay-bg-color

.AppModal__title
  text-align center
  font-size 27px
  font-weight bold
