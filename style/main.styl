@font-face
  font-family 'Montserrat', sans-serif

body
  font-family Montserrat
  margin 0
  padding 0

nav,footer
  padding 1rem
  background-color #9AD1E1
  color black
  font-weight bolder
nav
  display flex
  .logo
    margin 1rem
    display flex
    img
      max-width 3rem
      height 3rem
      padding .5rem
  .slider
    display flex
    margin 1rem
    height 3rem
footer
  position fixed
  width 100%
  text-align center
  bottom 0
  margin 0


@import "/toggle.import.styl"
@import "/blocks.import.styl"
@import "/containers.import.styl"
