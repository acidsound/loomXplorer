.tgl
  visibility: hidden
  & + .tgl-btn
    outline 0
    display block
    width 4em
    height 2em
    position relative
    cursor pointer
    user-select none
    &:after
      left 0
    &:before
      display none
  &:checked
    & + .tgl-btn
      &:after
        left 50%
// .tgl, .tgl:after, .tgl:before, .tgl *, .tgl *:after, .tgl *:before, .tgl + .tgl-btn
//   box-sizing border-box
// .tgl::selection, .tgl:after::selection, .tgl:before::selection, .tgl *::selection, .tgl *:after::selection, .tgl *:before::selection, .tgl + .tgl-btn::selection
//   background none
.tgl-skewed
  & + .tgl-btn
    overflow hidden
    backface-visibility hidden
    transition all 0.2s ease
    font-family sans-serif
    background #888
    &:after
      left 100%
      content attr(data-tg-on)
    &:before
      left 0
      content attr(data-tg-off)
    &:active
      background #888
      &:before
        left -10%
  &:checked
    & + .tgl-btn
      background #86d993
      &:before
        left -100%
      &:after
        left 0
      &:active
        &:after
          left 10%
.tgl-skewed + .tgl-btn:after, .tgl-skewed + .tgl-btn:before
  display inline-block
  transition all 0.2s ease
  width 100%
  text-align center
  position absolute
  line-height 2em
  font-weight bold
  color #fff
  text-shadow 0 1px 0 rgba(0, 0, 0, .4)
